rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // match /{document=**} {
    //   allow read, write: if false;
    // }
    match /admins/{admin} {
    	allow read, write: if true;
    }
    match /messages/{message} {
    	allow read, write: if false;
    }
    
    match /players/{player} {
    	allow read, write: if true;
    }
    
    match /rooms/{room} {
    	allow create: if true;
      allow write: if true;
      allow update: if true;
      allow read: if true;
    }
  }
}